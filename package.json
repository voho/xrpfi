{
  "name": "@xrpfi/root",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@xrpfi/frontend": "file:frontend",
    "@xrpfi/backend": "file:backend",
    "concurrently": "^5.0.0"
  },
  "scripts": {
    "server": "npm start --prefix backend",
    "client": "npm start --prefix frontend",
    "server-dev": "npm run dev --prefix backend",
    "client-dev": "npm start --prefix frontend",
    "install": "npm install && npm --prefix backend install && npm --prefix frontend install",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\""
  }
}
